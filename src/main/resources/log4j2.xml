<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="basePath">C:/Users/x380/IdeaProjects/cg-hippodrome/logs</Property>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %level %c: %msg%n</Property>
    </Properties>

    <Appenders>
        <RollingFile name="FileAppender" 
                    fileName="${basePath}/hippodrome.log"
                    filePattern="${basePath}/hippodrome-%d{yyyy-MM-dd}-%i.log"
                    createOnDemand="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="5">
                <Delete basePath="${basePath}" maxDepth="5">
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="all">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
